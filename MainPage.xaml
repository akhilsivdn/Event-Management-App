<Page
    x:Class="Events.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Events"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" DataContext="{StaticResource MainVM}">

    <Grid Background="#0D223F" >
        <Image  Source="Assets/Artboard 1.png" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,0">
            <Button Content="REGISTER" FontSize="20" Width="314" Click="RegisterButton_Click" Background="{StaticResource ButtonBackground}"/>
            <Button Content="LOGIN" FontSize="20" Width="314"  Margin="0,40,0,0" Click="LoginButton_Click" Background="{StaticResource ButtonBackground}"/>
        </StackPanel>

    </Grid>
</Page>